<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_doctor_list_top"
            android:orientation="horizontal"
            android:background="@color/steelblue"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/img_appoint_back"
                android:src="@drawable/back01"/>
            <TextView
                android:layout_weight="1"
                android:text="请填写预约信息"
                android:textSize="18sp"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="咨询"
                android:textSize="16sp"
                android:id="@+id/tv_appointmentdoctorinfo_zixun"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="8dp"
                android:text="  病症:"
                android:textSize="16sp"
                android:layout_width="80dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_disease"
                android:hint="病症描述"
                android:textSize="18sp"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:maxLength="63"
                android:minHeight="40dp"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_back"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:text="  预约时间:"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv"
                    android:textSize="18sp"
                    android:text="未选择"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <DatePicker
                android:id="@+id/datepicker"
                android:layout_gravity="center"
                android:calendarViewShown="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </DatePicker>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:layout_weight="1"
                android:text="取消"
                android:id="@+id/bt_cancel"
                android:textColor="#ffffff"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/button_back"/>
            <Button
                android:layout_weight="1"
                android:text="预约"
                android:id="@+id/bt_appoint"
                android:textColor="#ffffff"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/button_back"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>