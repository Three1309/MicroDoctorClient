<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        
   
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/ll_alldoctorlist_top"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/steelblue"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/img_shareinfo_back"
                android:src="@drawable/back01"/>
            <TextView
                android:text="帖子详情"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"/>

            <ImageView
                android:padding="4dp"
                android:layout_width="55dp"
                android:layout_height="40dp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/img_activity_shareinfo_mehead"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/user_icon"
                    android:text="预约医师："/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/tv_activity_shareinfo_name"
                            android:layout_marginLeft="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="#5f98ed"
                            android:textSize="16sp"
                            android:text="刘医生"/>

                        <TextView
                            android:id="@+id/tv_activity_shareinfo_type"
                            android:layout_marginLeft="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@drawable/single_unselect_green"
                            android:padding="2dp"
                            android:textColor="#edecec"
                            android:textSize="13sp"
                            android:text=" 医师 "/>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" >
                        <TextView
                            android:id="@+id/tv_activity_shareinfo_sendtime"
                            android:layout_marginLeft="2dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="2017-01-01 10:10:10"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_marginLeft="1dp"
                            android:id="@+id/tv_activity_shareinfo_delete"
                            android:gravity="center"
                            android:text="删除"
                            android:layout_gravity="center_vertical"
                            android:layout_width="40dp"
                            android:textSize="13sp"
                            android:padding="2dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_activity_shareinfo_collect"
                        android:text="  + 收藏  "
                        android:textSize="13sp"
                        android:gravity="right"
                        android:padding="6dp"
                        android:textColor="#5f98ed"
                        android:background="@drawable/textview_back1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_activity_shareinfo_collectamount"
                        android:text="·0"
                        android:padding="3dp"
                        android:textSize="13sp"
                        android:gravity="right"
                        android:textColor="#5f98ed"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="17dp">

                <TextView
                    android:id="@+id/tv_activity_shareinfo_title"
                    android:text="标题"
                    android:textSize="16sp"
                    android:maxLength="21"
                    android:padding="2dp"
                    android:textColor="#333232"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/tv_activity_shareinfo_content"
                    android:text="内容"
                    android:textSize="15sp"
                    android:textColor="#767474"
                    android:padding="2dp"
                    android:minLines="3"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:background="#F0F3F6"
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_marginLeft="1dp"
                    android:id="@+id/tv_activity_shareinfo_discussamount"
                    android:text="全部评论（0）"
                    android:textSize="12sp"
                    android:textColor="#9c9b9b"
                    android:padding="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ListView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shareinfolistview"/>
            </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_activity_shareinfo_senddiscuss"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:id="@+id/bt_activity_shareinfo_unsend"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/button_back"
            android:textSize="15sp"
            android:padding="7dp"
            android:text="取消"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:id="@+id/bt_activity_shareinfo_send"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/button_back"
            android:textSize="15sp"
            android:padding="7dp"
            android:text="发表"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:background="#F0F3F6"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:maxLength="45"
            android:id="@+id/et_activity_shareinfo_discusscontent"
            android:hint="回复楼主(最多45字)"
            android:textColorHint="#b1c7c4c3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/textview_back1"/>
        <LinearLayout
            android:id="@+id/ll_activity_shareinfo_like"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/img_activity_shareinfo_likes"
                android:src="@mipmap/like01"
                android:layout_width="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="9dp"
                android:layout_height="match_parent" />
            <TextView
                android:text="·0"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_activity_shareinfo_likesamount"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_height="50dp"/>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>