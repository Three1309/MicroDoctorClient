<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/steelblue"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/image_registerdoctor_back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:src="@drawable/back01"
            android:layout_width="60dp"
            android:layout_height="25dp" />
        <TextView
            android:text="注册医师"
            android:textSize="21sp"
            android:textColor="#fffff1"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/registerdoctor_tv_info"
            android:text="未申请"
            android:textSize="19sp"
            android:textColor="#f21509"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <!-- 全圆角-->
    <LinearLayout

        android:orientation="horizontal"
        style="@style/wrap_layout"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/registerdoctor_tv_account"
            android:textSize="19sp"
            android:gravity="center"
            android:text="账号：18219111626"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


    <LinearLayout
        style="@style/wrap_layout" >
        <LinearLayout
            style="@style/single_layout">
            <EditText

                style="@style/usertext"
                android:background="@drawable/edittext_back"
                android:maxLength="25"
                android:gravity="center"
                android:id="@+id/registerdoctor_et_hospital"
                android:hint="所属医院" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        style="@style/wrap_layout" >
        <LinearLayout
            style="@style/single_layout">
            <EditText

                style="@style/usertext"
                android:background="@drawable/edittext_back"
                android:maxLength="25"
                android:gravity="center"
                android:id="@+id/registerdoctor_et_office"
                android:hint="所属科室" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_registerdoctor_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_back"
        android:text="请求验证"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp" />

</LinearLayout>