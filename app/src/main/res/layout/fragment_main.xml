<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:background="#bd2ea3fe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/title_bar_left_menu"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/app_name"
            android:textSize="22sp"
            android:textColor="#fdfdfd"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|center_vertical"/>
        <!--
                    <Button
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/titlebar_menu_selector"
                        android:id="@+id/title_bar_right_menu"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="10dp"/>
                        -->
    </FrameLayout>
    <com.zhuolang.fu.microdoctorclient.view.CustomViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.zhuolang.fu.microdoctorclient.view.CustomViewPager>

    <!--底部tab-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >
        <!--运用自定义的控件和属性-->
        <com.zhuolang.fu.microdoctorclient.view.ChangeColorIconWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="3dp"
            hyman:icon="@drawable/ic_menu_allfriends"
            hyman:color="#FF3098EF"
            hyman:text="@string/tab_homepage"
            hyman:text_size="13sp"
            android:layout_weight="1"/>

        <com.zhuolang.fu.microdoctorclient.view.ChangeColorIconWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="3dp"
            hyman:icon="@drawable/ic_menu_start_conversation"
            hyman:color="#FF3098EF"
            hyman:text="发现"
            hyman:text_size="13sp"
            android:layout_weight="1"/>
        <com.zhuolang.fu.microdoctorclient.view.ChangeColorIconWithText
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="3dp"
            hyman:icon="@drawable/ic_menu_friendslist"
            hyman:color="#FF3098EF"
            hyman:text="消息"
            hyman:text_size="13sp"
            android:layout_weight="1"/>

        <com.zhuolang.fu.microdoctorclient.view.ChangeColorIconWithText
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="3dp"
            hyman:icon="@drawable/ic_menu_emoticons"
            hyman:color="#FF3098EF"
            hyman:text="@string/tab_me"
            hyman:text_size="13sp"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>
