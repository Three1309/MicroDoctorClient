<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_registerdoctoritem_number"
        android:layout_marginLeft="2dp"
        android:text="1000"
        android:textColor="@color/red"
        android:layout_width="80dp"
        android:layout_height="82dp"
        android:background="@mipmap/doctor_head"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginLeft="3dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="90dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="华佗"
                android:textColor="#4d4c4c"
                android:id="@+id/tv_registerdoctoritem_name"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="科室：骨科"
                android:id="@+id/tv_registerdoctoritem_office"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="25dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医院：江门市人民第二医院"
                android:id="@+id/tv_registerdoctoritem_hospital"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="80dp"
        android:layout_height="90dp">
        <TextView
            android:background="@drawable/single_layout_selector_nobackground"
            android:textColor="@color/green"
            android:id="@+id/tv_registerdoctoritem_agree"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="同意"
            android:layout_width="fill_parent"
            android:layout_height="0dp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="3dp" />

        <TextView
            android:background="@drawable/single_layout_selector_nobackground"
            android:textColor="@color/red"
            android:id="@+id/tv_registerdoctoritem_disagree"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="拒绝"
            android:layout_width="fill_parent"
            android:layout_height="0dp" />

    </LinearLayout>

</LinearLayout>
