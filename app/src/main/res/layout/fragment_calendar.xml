<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F0F3F6"
        >
        
        <LinearLayout
            style="@style/wrap_layout" >
            <!-- 上圆角-->
            <LinearLayout
                android:id="@+id/fcalendar_ll_health"
                style="@style/top_layout">
                <TextView style="@style/usertext"
                    android:text="健康资讯" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

            <!-- 分割线 -->
            <View style="@style/bg_line"/>
            <!-- 无圆角-->
            <LinearLayout
                android:id="@+id/fcalendar_ll_askdoctro"
                style="@style/mid_layout">
                <TextView
                    style="@style/usertext"
                    android:text="病情咨询" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <!-- 下圆角-->
            <LinearLayout
                android:id="@+id/fcalendar_ll_myask"
                style="@style/bottom_layout">
                <TextView
                    style="@style/usertext"
                    android:text="我的咨询" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            style="@style/wrap_layout" >
            <!-- 上圆角-->
            <LinearLayout
                android:id="@+id/fcalendar_ll_registerdoc"
                style="@style/top_layout">
                <TextView
                    android:id="@+id/fcalendar_tv_regdoctor"
                    style="@style/usertext"
                    android:text="注册医师" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <LinearLayout
                android:id="@+id/fcalendar_ll_logout"
                style="@style/mid_layout">
                <TextView
                    style="@style/usertext"
                    android:text="切换账号" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <!-- 下圆角-->
            <LinearLayout
                android:id="@+id/fcalendar_ll__finish"
                style="@style/bottom_layout">
                <TextView
                    style="@style/usertext"
                    android:text="退出系统" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>