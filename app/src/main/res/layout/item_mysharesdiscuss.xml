<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginTop="14dp"
            android:background="@mipmap/blackyuan"
            android:layout_width="7dp"
            android:layout_height="7dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_item_mysharesdiscuss_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="2017.01.01" />
            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:id="@+id/tv_item_mysharesdiscuss_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:10:10" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_mysharesdiscuss_discontent"
            android:text="评论"
            android:textSize="15sp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_myshareshistory_content"
        android:background="@drawable/editnobordor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:padding="1dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_item_mysharesdiscuss_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="标题" />

        <TextView
            android:padding="1dp"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_item_mysharesdiscuss_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="内容" />
    </LinearLayout>

</LinearLayout>